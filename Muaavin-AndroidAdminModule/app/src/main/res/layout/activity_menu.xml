<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cfp.muaavin.ui.MenuActivity"
    android:background="#dfe3ee">

    <TextView
        android:layout_height="40dp"
        android:layout_width="fill_parent"
        android:background="@color/appTheme"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:text="Muavin"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:id="@+id/textView2"
        android:visibility="gone"
        />

    <TextView android:text="Menu" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/textView2"
        android:textSize="40dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:visibility="gone"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="___"
        android:id="@+id/browsePost"
        android:layout_below="@+id/ViewReportedUser"
        android:layout_centerHorizontal="true"
        android:background="@color/appTheme"
        android:textColor="#FFF"
        android:layout_marginTop="19dp"
        android:width="200dp"
        android:visibility="gone"
        android:onClick="BrowsePost"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Users"
        android:id="@+id/Block"
        android:width="200dp"
        android:background="@color/appTheme"
        android:textColor="#FFF"
        android:onClick="blockUser"
        android:layout_alignLeft="@+id/delete"
        android:layout_alignStart="@+id/delete"
        android:layout_marginTop="100dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Notified Posts"
        android:id="@+id/delete"
        android:onClick="deletePost"
        android:background="@color/appTheme"
        android:textColor="#FFF"
        android:width="200dp"
        android:visibility="gone"
        android:layout_above="@+id/ViewReportedUser"
        android:layout_alignLeft="@+id/ViewReportedUser"
        android:layout_alignStart="@+id/ViewReportedUser" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Notified Users"
        android:id="@+id/ViewReportedUser"
        android:background="@color/appTheme"
        android:textColor="#FFF"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:width="200dp"
        android:onClick="viewReportedUser"
        android:layout_below="@+id/Block"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="View Notified Posts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/appTheme"
        android:textColor="#FFF"
        android:id="@+id/button2"
        android:onClick="highlightedPosts"
        android:layout_below="@+id/ViewReportedUser"
        android:layout_alignLeft="@+id/ViewReportedUser"
        android:layout_alignStart="@+id/ViewReportedUser"
        android:layout_alignRight="@+id/ViewReportedUser"
        android:layout_alignEnd="@+id/ViewReportedUser" />

    <Button
        android:text="View Notified Tweets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:onClick="highlightedTweets"
        android:background="@color/appTheme"
        android:textColor="#FFF"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

